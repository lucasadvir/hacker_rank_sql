( SELECT CITY, length( CITY ) FROM STATION ORDER BY length( CITY ) DESC, CITY ASC LIMIT 1 ) 

UNION

( SELECT CITY, length( CITY ) FROM STATION ORDER BY length( CITY ) ASC, CITY ASC LIMIT 1 );
